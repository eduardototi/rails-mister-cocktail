<div class='container'>
  <div class='container-show center'>
    <div class="cocktail-card grid-item">
      <div class='name text-center'>
        <%= @cocktail.name%>
      </div>

      <div class='cocktail-photo'>
        <%= cl_image_tag @cocktail.photo.key, height: 200, width: 200, crop: :fill %>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li><%= dose.description %> - <%= dose.ingredient.name %></li>
          <% end %>
        </ul>
      </div>
      <div class='card-links text-center'>
        <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), class: 'btn' %>
        <%= link_to 'Cocktails List', cocktails_path, class: 'btn' %>
      </div>
    </div>
  </div>
</div>