<h3>Cocktails List:</h3>
  <%= @cocktail.name %>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  <% end %>

<%= link_to 'Index', cocktails_path, class: 'btn btn-info' %>
<%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-danger' %>

<div class="container mt-4">

  <div class="cards">
    <% @cocktail.doses.each do |plant| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <% end %>
        </div>
    <% end %>
  </div>
